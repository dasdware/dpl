type Point := [ x: Number, y: Number ];

function add(a: Point, b: Point)
    := [ x := a.x + b.x, y := a.y + b.y ];

function print(p: Point)
    := print("[x: " + p.x.toString() + ", y: " + p.y.toString() + "]");

var y := 2;
var p1 := [ x := 1, y ];
var p2: Point := [ y := 2*3, x := 1 ];
print("p1     : "); print(p1); print("\n");
print("p2     : "); print(p2); print("\n");
print("p1 + p2: "); print(p1 + p2); print("\n");

p1 := [ ..p1, x := p1.x * 3 ];
p2 := [ ..p2, y := p2.x * 21 ];
print("p1     : "); print(p1); print("\n");
print("p2     : "); print(p2); print("\n");
print("p1 + p2: "); print(p1 + p2); print("\n");
