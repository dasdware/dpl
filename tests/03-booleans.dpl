# Printing booleans yields the words `true` or `false`.
print(true); print("\n");
print(false); print("\n");

# Converting booleans to strings
print("${true}\n");
print("${false}\n");

# Assigning to variables
var x := true;
print(x); print("\n");
print("${x}\n");
var y := false;
print(y); print("\n");
print("${y}\n");

# Assigning to constants
constant z := true;
print(z); print("\n");
print("${z}\n");