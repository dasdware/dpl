# Printing booleans yields the words `true` or `false`.
print(true); print("\n");
print(false); print("\n");

# Converting booleans to strings
print(true.toString() + "\n");
print(false.toString() + "\n");

# Assigning to variables
var x := true;
print(x); print("\n");
print(x.toString() + "\n");
var y := false;
print(y); print("\n");
print(y.toString() + "\n");

# Assigning to constants
constant z := true;
print(z); print("\n");
print(z.toString() + "\n");